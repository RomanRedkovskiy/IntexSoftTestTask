<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-insert-head-employee" author="redkovskiy">
        <insert tableName="employee">
            <column name="name" value="John"/>
            <column name="surname" value="Doe"/>
            <column name="salary" valueNumeric="10000"/>
            <column name="role" value="HEAD"/>
            <column name="manager_id" valueNumeric="null"/>
            <column name="department_id" valueNumeric="1"/>
            <column name="registration_time" value="NOW()"/>
            <column name="update_time" value="NOW()"/>
        </insert>
    </changeSet>

    <changeSet id="2-insert-manager-employee" author="redkovskiy">
        <insert tableName="employee">
            <column name="name" value="Alice"/>
            <column name="surname" value="Smith"/>
            <column name="salary" valueNumeric="5000"/>
            <column name="role" value="MANAGER"/>
            <column name="manager_id" valueNumeric="null"/>
            <column name="department_id" valueNumeric="1"/>
            <column name="registration_time" value="NOW()"/>
            <column name="update_time" value="NOW()"/>
        </insert>
    </changeSet>

    <changeSet id="3-insert-default-employee" author="redkovskiy">
        <insert tableName="employee">
            <column name="name" value="Bob"/>
            <column name="surname" value="Johnson"/>
            <column name="salary" valueNumeric="1000"/>
            <column name="role" value="DEFAULT"/>
            <column name="manager_id" valueNumeric="2"/>
            <column name="department_id" valueNumeric="1"/>
            <column name="registration_time" value="NOW()"/>
            <column name="update_time" value="NOW()"/>
        </insert>
    </changeSet>

</databaseChangeLog>
